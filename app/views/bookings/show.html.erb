<div class="container mt-4">
    <% @booking = Booking.find(params[:id].to_i) %>
    <%= render 'flights/flight', flight: @booking.flight %>
    <h3 >Confirmation Code: <%= @booking.confirmation %></h3>

    <div>
        <% @booking.passengers.each_with_index do |passenger, index| %>
            <div class="ticket-container">
                <h4>#<%= index + 1%> Boarding pass for <%= passenger.name != "" ? passenger.name : "Anonymous"%>: </h4>
                <%= render 'boarding_pass', flight: @booking.flight, passenger: passenger %>
            </div>
        <% end %>
    </div>
</div>